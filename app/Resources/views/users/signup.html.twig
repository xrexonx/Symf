{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/foundation/6.1.2/foundation.min.css">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/styles.css') }}">
{% endblock %}

{% block body %}
    <div id="container">
        <div class="loginDiv">
            <form id="login">
                <div class="row">
                    <div class="columns large-4 large-offset-4 medium-8 medium-offset-2">
                        <input type="text" name="name" placeholder="Fullname"/>
                    </div>
                </div>
                <div class="row">
                    <div class="columns large-4 large-offset-4 medium-8 medium-offset-2">
                        <input type="email" name="email" placeholder="Email"/>
                    </div>
                </div>
                <div class="row" id="_pass">
                      <div class="columns large-4 large-offset-4 medium-8 medium-offset-2">
                        <input type="password" name="password" placeholder="Password"/>
                      </div>
                </div>
                <div class="row">
                      <div class="columns large-4 large-offset-4 medium-8 medium-offset-2 clearfix">
                        <button class="button right radius" >Sign Me In</button>
                      </div>

                </div>
            </form>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/jquery/3.0.0-beta1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/foundation/6.1.2/foundation.min.js"></script>

    <script src="http://cdn.jsdelivr.net/vue/1.0.16/vue.min.js"></script>
    <script type="text/javascript" src="{{ asset('assets/js/users/UserController.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/authentication/AuthController.js') }}"></script>
{% endblock %}